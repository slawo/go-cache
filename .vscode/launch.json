        {
            "name": "Debug Package Test",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${fileDirname}/__debug_bin",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "preLaunchTask": "go test (debug)"
        }
    ]
